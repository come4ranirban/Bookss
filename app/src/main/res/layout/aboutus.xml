<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/colorBlue"
        android:id="@+id/aboutus"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact Us"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/aboutus"
        android:layout_marginTop="8dp"
        android:id="@+id/contactustext"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/contactustext"
        android:id="@+id/contactmail"
        android:textColor="@color/colorBlue"
        android:textSize="13sp"
        android:textStyle="italic|bold"
        android:text="support@bhavikatechnosolutions.com"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/contactmail"
        android:id="@+id/contactno"
        android:textColor="@color/colorBlue"
        android:textSize="13sp"
        android:textStyle="italic|bold"
        android:text="+917019752180"/>


    <ImageView
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_below="@+id/contactno"
        android:id="@+id/icon"
        android:src="@drawable/icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Svadhaya V1.0"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:layout_below="@+id/icon"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>